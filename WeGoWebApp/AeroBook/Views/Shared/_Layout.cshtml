<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AeroBook</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AeroBook.styles.css" asp-append-version="true" />
    <style>
        body{
            background-image: url('image/flight.png');
            background-repeat: no-repeat;
            background-size: 100% 65%;
        }

        .navbar {
            background-color: #ccc7c794;
            overflow: hidden;
        }

        .navbar-left {
            float: left;
            padding: 2px 15px;
        }

        .navbar-right {
            float: right;
            padding: 2px;
        }

            .navbar-right ul, .navbar-left ul {
                list-style-type: none;
                margin: 0;
                padding: 0;
            }

                .navbar-left ul li, .navbar-right ul li {
                    display: inline;
                    margin-right: 20px;
                }

            .navbar-left ul, .navbar-right ul {
                color: #000000;
                text-decoration: none;
                font-weight: 450;
            }

        .inverted-icon {
            transform: scaleX(-1);
        }
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Homepage">AeroBook</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>

                @*<div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Homepage">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Flight">Flights</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Hotel">Hotels</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Cab">Cabs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="AboutUs">About Us</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Login">Login</a>
                        </li>
                    </ul>
                </div>*@
            </div>
            <div class="navbar-left">
                <ul>
                    <li>
                        <a href="#farmer"><i class="fas fa-plane"></i>Flights</a>
                    </li>
                    <li>
                        <a href="#products">Hotels</a>
                    </li>
                    <li>
                        <a href="#orders"><i class="fas fa-shopping-cart"</i>Cabs</a>
                    </li>
                    <li>
                        <a href="#manage"><i class="fas fa-phone inverted-icon"></i>Manage Calls</a>
                    </li>
                </ul>
            </div>
            <div class="navbar-right">
                <ul>
                    <li>
                        <a href="#login"></i>Login</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
